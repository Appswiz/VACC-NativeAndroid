<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@mipmap/about_top_bg"
        android:scaleType="fitStart" />
    <LinearLayout
        android:paddingTop="@dimen/dp_20"
        android:paddingBottom="@dimen/dp_20"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:paddingLeft="@dimen/dp_20"
            android:paddingRight="@dimen/dp_20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:textColor="@color/white"
                android:text="About"
                android:textSize="@dimen/dp_18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginLeft="@dimen/dp_5"
                android:textSize="@dimen/dp_35"
                android:textColor="@color/white"
                android:text="VACC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <Spinner
            android:paddingLeft="@dimen/dp_20"
            android:paddingRight="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/spinner" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <FrameLayout
                android:paddingLeft="@dimen/dp_20"
                android:paddingRight="@dimen/dp_20"
                android:paddingTop="@dimen/dp_10"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/bottom_container">
                <au.com.vacc.timesheets.views.CustomButton
                    android:visibility="gone"
                    android:id="@+id/find_button"
                    android:textColor="@color/white"
                    android:background="@mipmap/apply_button_bg"
                    android:text="Find a VACC expert"
                    android:layout_gravity="bottom|right"
                    android:layout_width="140dp"
                    android:layout_height="40dp" />
                <ImageView
                    android:visibility="gone"
                    android:src="@mipmap/about_corporate_image"
                    android:id="@+id/image_responsibility"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_150" />
            </FrameLayout>
            <ScrollView
                android:id="@+id/scrollView"
                android:layout_above="@id/bottom_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fillViewport="true">
                <TextView
                    android:paddingLeft="@dimen/dp_20"
                    android:paddingRight="@dimen/dp_20"
                    android:textSize="@dimen/dp_15"
                    android:textColor="@color/black_light"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView" />
            </ScrollView>
        </RelativeLayout>
    </LinearLayout>
</FrameLayout>