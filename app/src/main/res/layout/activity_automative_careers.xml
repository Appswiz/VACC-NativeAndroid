<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">
    <ImageView
        android:scaleType="fitStart"
        android:src="@mipmap/apply_top_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <ImageView
        android:scaleType="fitEnd"
        android:src="@mipmap/apply_bottom_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:paddingLeft="@dimen/dp_20"
            android:paddingRight="@dimen/dp_20"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:scaleType="fitStart"
                android:src="@mipmap/apply_top_logo"
                android:layout_width="@dimen/dp_100"
                android:layout_height="@dimen/dp_60" />
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="@dimen/dp_14"
                        android:textColor="@color/white"
                        android:text="Available Apprenticeships &amp;"
                        android:textStyle="bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:gravity="right"
                        android:textSize="@dimen/dp_18"
                        android:textColor="@color/white"
                        android:text="How to"
                        android:textStyle="bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <TextView
                    android:paddingLeft="@dimen/dp_5"
                    android:textSize="@dimen/dp_30"
                    android:textColor="@color/white"
                    android:text="apply"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <TextView
                android:layout_marginTop="@dimen/dp_5"
                android:textSize="@dimen/dp_14"
                android:textColor="@color/white"
                android:text="Students need to complete an Apprenticeship Application Form, easily accessible at autoapprenticeships.com.au"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginTop="@dimen/dp_5"
                android:textSize="@dimen/dp_14"
                android:textColor="@color/white"
                android:text="VET or Careers Co-ordinators can help by faxing/mailing the Application Form directly to Auto Apprenticeships, along with a covering letter, studentâ€™s resume and recent school reports."
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginTop="@dimen/dp_10"
                android:textSize="@dimen/dp_14"
                android:textColor="@color/white"
                android:text="Select a course to find out more:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <ListView
            android:padding="@dimen/dp_20"
            android:id="@+id/listview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</FrameLayout>